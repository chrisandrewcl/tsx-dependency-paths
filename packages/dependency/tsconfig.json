{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolvePackageJsonImports": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
